@model CumulativeProject.Models.Teacher

@{
    ViewData["Title"] = "Confirm Delete";
}

<div class="container mt-4">
    <h2 class="text-danger">Confirm Delete</h2>

    <p class="mt-3">Are you sure you want to delete this teacher?</p>

    <ul class="list-group mb-4">
        <li class="list-group-item"><strong>First Name:</strong> @Model.TeacherFName</li>
        <li class="list-group-item"><strong>Last Name:</strong> @Model.TeacherLName</li>
        <li class="list-group-item"><strong>Employee Number:</strong> @Model.EmployeeNumber</li>
        <li class="list-group-item"><strong>Hire Date:</strong> @Model.HireDate?.ToString("yyyy-MM-dd")</li>
        <li class="list-group-item"><strong>Salary:</strong> $@Model.Salary</li>
    </ul>

    <form asp-action="Delete" method="post" class="d-inline">
        <input type="hidden" name="id" value="@Model.TeacherId" />
        <button type="submit" class="btn btn-danger me-2">Confirm Delete</button>
    </form>

    <a href="/Teacher/New" class="btn btn-secondary">Cancel</a>
</div>
