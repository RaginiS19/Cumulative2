@model CumulativeProject.Models.Course
@{
    ViewData["Title"] = "Add New Course";
}

<h2 class="mt-4 mb-4">Add New Course</h2>

<div class="container">
    <form asp-action="Create" method="post" class="border p-4 rounded shadow-sm bg-light">
        <div class="mb-3">
            <label class="form-label">Course Code:</label>
            <input asp-for="CourseCode" class="form-control" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Course Name:</label>
            <input asp-for="CourseName" class="form-control" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Teacher ID (optional):</label>
            <input asp-for="TeacherId" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Start Date:</label>
            <input asp-for="StartDate" class="form-control" type="date" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Finish Date:</label>
            <input asp-for="FinishDate" class="form-control" type="date" required />
        </div>
        <button type="submit" class="btn btn-primary">Add Course</button>
    </form>

    @if (ViewBag.SuccessMessage != null)
    {
        <div class="alert alert-success mt-3">@ViewBag.SuccessMessage</div>
    }

    @if (TempData["DeleteSuccess"] != null)
    {
        <div class="alert alert-success mt-3">@TempData["DeleteSuccess"]</div>
    }

    @if (TempData["NotFoundError"] != null)
    {
        <div class="alert alert-danger mt-3">@TempData["NotFoundError"]</div>
    }
</div>
