@model CumulativeProject.Models.Course
@{
    ViewData["Title"] = "Confirm Delete";
}

<div class="container mt-4">
    <h3>Are you sure you want to delete this course?</h3>

    <p><strong>Course Code:</strong> @Model.CourseCode</p>
    <p><strong>Course Name:</strong> @Model.CourseName</p>
    <p><strong>Start Date:</strong> @Model.StartDate?.ToShortDateString()</p>
    <p><strong>Finish Date:</strong> @Model.FinishDate?.ToShortDateString()</p>

    <form asp-action="Delete" method="post">
        <input type="hidden" name="id" value="@Model.CourseId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="New" class="btn btn-secondary">Cancel</a>
    </form>
</div>
