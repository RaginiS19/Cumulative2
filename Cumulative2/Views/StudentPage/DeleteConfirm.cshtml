@model CumulativeProject.Models.Student
@{
    ViewData["Title"] = "Confirm Delete";
}

<div class="container mt-4">
    <h3>Are you sure you want to delete this student?</h3>

    <p><strong>Name:</strong> @Model.StudentFName @Model.StudentLName</p>
    <p><strong>Student Number:</strong> @Model.StudentNumber</p>
    <p><strong>Enrol Date:</strong> @Model.EnrolDate?.ToShortDateString()</p>

    <form asp-action="Delete" method="post">
        <input type="hidden" name="id" value="@Model.StudentId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="New" class="btn btn-secondary">Cancel</a>
    </form>
</div>
